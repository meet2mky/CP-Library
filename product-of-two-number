/*  Program to find the product of two numbers 
    when each number is of approximate size of the data type 
    and product can not be directly stored in the data type
    we will find this product with modulo some number
*/

/* Time complexity = O(log(min(a,b))
*/
#include <iostream>
using namespace std;
const int MOD = 1e9 + 7;
int product(int a, int b, int MOD){
    if(a<b)swap(a,b);
    int res = 0;
    while(b > 0){
        if(b&1) res += a;
        if(res >=MOD) res %= MOD;
        b >>= 1;
        a += a;
        if(a >= MOD) a %= MOD;
    }
    return res;
}
signed main(){
    int a = 12;
    int b = 12;
    cout << product(a,b,MOD) << endl;
    return 0;
}
